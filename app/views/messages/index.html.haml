= render 'messages/side_bar'
.chatpage
  .chatpage__header
    .chatpage__talk-group-editbox
      = link_to "Edit", edit_group_path(@group), method: :get
    .chatpage__talk-group-nm
      .chatpage__talk-group-name
        = @group.name
      .chatpage__talk-member
        .chatpage__talk-member-m
          Member :
          .chatpage__talk-member-n
            - @group.users.each do |user|
              = user.name
  .chatpage__talk-page
    .chatpage__talk-page-main
      .messages
        = render @messages
  .chatpage__talk-type
    .form__message
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        .form__submit
          = f.submit 'Send', class: 'form__submit'


